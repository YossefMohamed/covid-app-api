<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>CO-Beat DashBoard</title>
    <link rel="stylesheet" href="/statics/css/bootstrap.css">
    <link rel="stylesheet" href="/statics/css/line-awesome.min.css">
    <link rel="stylesheet" href="/statics/css/style.css">
</head>

<body>
    <div class="wrapper">
        <nav id="sidebar" style="min-height: 100vh;">
            <div class="fixed">
                <div class="sidebar-header">
                    <div class="logo">
                        <img src="https://cdn-icons-png.flaticon.com/512/2913/2913604.png" alt="">
                    </div>
                    <h4>CO-Beat</h4>
                </div>

                <ul class="list-unstyled components">
                    <h6>main</h6>
                    <li class="active">
                        <a href="/admin">
                            <span> <i class="las la-tachometer-alt"></i> dashboard </span>
                        </a>
                    </li>

                    <li > 
                        <a href="/admin/samples">
                            <span> <i class="las la-inbox"></i> Samples </span>
                        </a>
                    </li>
                   
                    
                    <li > 
                        <a href="/admin/unverifiedsamples">
                            <span> <i class="las la-inbox"></i> Unverified Samples </span>
                        </a>
                    </li>
                   
                </ul>
            </div>
        </nav>

        <!--regular nav-->
        <div class="main">
            <nav class="upper navbar">
                <div class="right">
                    <button type="button" id="sidebarCollapse" class="btn">
                        <i class="las la-bars"></i>
                    </button>
                  
                </div>

                <div class="admin">
                    <ul>
                    
                        <li class="nav-item">
                            <a class="nav-link" href="/admin/logout">
                                <h4 >
                                    <i class="las la-sign-out-alt"></i>
                                </h4>
                            </a>
                        </li>
                    </ul>
                </div>
            </nav>

            <!--content-->
            <div class="content">
                <div class="wrap">
                    <div class="row">
                        <div class="col-12 col-sm-12 col-md-12 col-lg-5 col-xl-5">
                            <div class="row">
                                <div class="col-12 col-sm-12 col-md-12 col-lg-6 col-xl-6 mb-4">
                                    <div class="child">
                                        <h6> <i class="las la-users"></i> Users</h6>
                                        <div class="details">
                                            <h4><%= users %> User</h4>
                                        </div>
                                    </div>
                                </div>

                                <div class="col-12 col-sm-12 col-md-12 col-lg-6 col-xl-6 mb-4">
                                    <div class="child">
                                        <h6> <i class="las la-tasks"></i>Predicted Samples</h6>
                                        <div class="details">
                                            <h4><%= samples %> samples</h4>

                                            
                                        </div>
                                    </div>
                                </div>

                                <div class="col-12 col-sm-12 col-md-12 col-lg-6 col-xl-6 ">
                                    <div class="child">
                                        <h6> <i class="las la-check"></i>Verified Samples</h6>
                                        <div class="details">
                                            <h4><%= testedSamples %> samples</h4>

                                            
                                        </div>
                                    </div>
                                </div>

                                <div class="col-12 col-sm-12 col-md-12 col-lg-6 col-xl-6 ">
                                    <div class="child">
                                        <h6> <i class="las la-tasks"></i>Total Samples</h6>
                                        <div class="details">
                                            <h4><%= totalSamples %> samples</h4>

                                            
                                        </div>
                                    </div>
                                </div>  
                                
                            </div>
                        </div>
                        <div class="col-12 col-sm-12 col-md-12 col-lg-7 col-xl-7">
                            <div class="child">
                                <span>
                                    <h6> <i class="las la-chart-pie"></i>Samples</h6>

                                </span>
    
                                <canvas id="oilChart" width="800" height="500"></canvas>
                            </div>                      
                        </div>
                    </div>

                </div>
                <div class="row">
                    <div class="col-12 col-sm-12 col-md-12 col-lg-6 col-xl-6 my-3">
                        <div class="child bg-success">
                            <h6 class="text-light"> <i class="las la-tasks text-light"></i>Negative Samples</h6>
                            <div class="details ">
                                <h4><%= negativeSamples %> samples</h4>

                                
                            </div>
                        </div>
                    </div>  
                    <div class="col-12 col-sm-12 col-md-12 col-lg-6 col-xl-6 my-3">
                        <div class="child bg-danger ">
                            <h6 class="text-light"> <i class="las la-tasks text-light"></i>Positive Samples</h6>
                            <div class="details text-light">
                                <h4><%= positiveSamples %> samples</h4>

                                
                            </div>
                        </div>
                    </div>
                </div>
                <!--second row-->
                <div class="row sec-row">
                    <div class="col-12 col-sm-12 col-md-12 col-lg-12 col-xl-12">
                        <div class="child tableWrap" style="overflow-x: auto;">
                            <h6>
                                Users
                            </h6>
                            <table class="table" style="overflow-y:auto">
                                <thead>
                                    <tr>
                                        <th scope="col">
                                            name
                                        </th><th scope="col">
                                            LastName
                                        </th>
                                        <th scope="col">
                                            Number
                                        </th>
                                        <th scope="col">
                                            Gender
                                        </th>
                                        <th scope="col">
                                            Email
                                        </th>
                                       
                                    </tr>
                                </thead>
                                <tbody>
                                    
                               
                                    <% for(var i=0; i<usersArray.length; i++) {%>
                                        <tr>
                                            <td><%= usersArray[i].name %></td>
                                            <td><%= usersArray[i].lastName %></td>
                                            <td><%= usersArray[i].number %></td>
                                            <td><%= usersArray[i].gender %></td>
                                            <td><%= usersArray[i].email %></td>
                                        </tr>
                                   
                                     <% } %>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="/statics/js/jquery.js"></script>
    <script src="/statics/js/bootstrap.js"></script>
    <script src="/statics/js/main.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/chart.js@2.8.0"></script>

    <script>
        var oilCanvas = document.getElementById("oilChart");

Chart.defaults.global.defaultFontFamily = "Lato";
Chart.defaults.global.defaultFontSize = 18;
var samplesData = {
    labels: [
       
        "Negative samples",
        "Positive samples",
    ],
    datasets: [
        {
            data: [<%= negativeSamples %>,<%= positiveSamples %> ],
            backgroundColor: [
                "#28a745",
                "#dc3545",
            ]
        }]
};

var pieChart = new Chart(oilCanvas, {
  type: 'pie',
  data: samplesData, 
  options: {
  legend: {
    display: false
  }
}
});
        </script>


</body>

</html>